{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "id": {
      "type": "integer",
      "minimum": 1
    },
    "login": {
      "type": "string",
      "minLength": 3,
      "maxLength": 50
    },
    "password": {
      "type": "string",
      "minLength": 6
    },
    "role": {
      "type": "string",
      "enum": ["supervisor", "admin", "user", "moderator"]
    },
    "age": {
      "type": "integer",
      "minimum": 1,
      "maximum": 150
    },
    "gender": {
      "type": "string",
      "enum": ["MALE", "FEMALE", "OTHER"]
    },
    "screenName": {
      "type": "string",
      "minLength": 2,
      "maxLength": 30
    }
  },
  "required": ["id", "login", "role", "age", "gender", "screenName"],
  "additionalProperties": false
}